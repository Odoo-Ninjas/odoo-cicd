<odoo>
	<data noupdate='0'>

	<record id="view_cicd_release_item_form" model="ir.ui.view">
		<field name="name">cicd.release.item form</field>
		<field name="model">cicd.release.item</field>
		<field name="arch" type="xml">
			<form string="">
					<header>
						<field name="state" widget="statusbar" attrs="{'readonly': True}" />
					</header>
				<sheet>
					<group >
						<field name="release_id" />
						<field name="name"/>
						<field name="planned_date"/>
						<field name="final_curtain"/>
						<field name="release_type"/>
						<field name="computed_summary"/>
					</group>
					<notebook>
							<page string="New Commits">
								<field name="diff_commit_ids">
									<tree>
										<field name="name"/>
										<field name="date"/>
										<field name="author"/>
									</tree>
								</field>
							</page>

					</notebook>

				</sheet>
			</form>
		</field>
	</record>

	</data>
</odoo>
