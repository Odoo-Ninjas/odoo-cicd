<odoo>
	<data noupdate='0'>
		<record id="view_cicd_test_run_line_form" model="ir.ui.view">
			<field name="name">cicd.test.run.line form</field>
			<field name="model">cicd.test.run.line</field>
			<field name="arch" type="xml">
				<form string="">
					<field name="robot_output" invisible="1"/>
					<header>
						<button name="robot_results" string="Robot Results" type="object" attrs="{'invisible': [('robot_output', '=', False)]}"/>
					</header>
					<sheet>
						<group colspan="4" col="4">
							<field name="ttype"/>
							<field name="started"/>
							<field name="force_success"/>
						</group>
						<group string="" colspan="4">
							<field name="name"/>
						</group>
						<separator string="Exception Info" colspan="4"/>
						<field name="exc_info" nolabel="1" colspan="4"/>
					</sheet>
				</form>
			</field>
		</record>
	</data>
</odoo>
