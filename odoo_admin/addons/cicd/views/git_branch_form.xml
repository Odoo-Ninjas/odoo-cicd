<odoo>
	<data noupdate="0">
		<record id="view_cicd_git_branch_form" model="ir.ui.view">
			<field name="name">cicd.git.branch form</field>
			<field name="model">cicd.git.branch</field>
			<field name="arch" type="xml">
				<form string="">
					<header>
						<button name="start" string="Start Instance" type="object"/>
						<!-- at debugging - remove auto created at create-->
						<field name="state" widget="statusbar" statusbar_visible="draft,confirm" attrs="{'readonly': True}" clickable="True" />
					</header>
					<sheet>
						<group string="Branch" col="4">
							<field name="name" />
							<field name="repo_id" />
							<field name="build_state" />
							<field name="dump_id"/>
							<field name="approver_ids" widget="many2many_tags"/>
						</group>
						<group string="Quality Assurance">
							<field name="run_unittests"/>
							<field name="run_robottests"/>
							<field name="simulate_empty_install"/>
							<field name="simulate_install_id"/>
						</group>
						<group string="Enduser Summary">
							<field name="enduser_summary" nolabel='1'/>
						</group>
						<notebook>
							<page string="Tasks" name="tasks">
								<field name="task_ids" nolabel="1" readonly="1">
									<tree>
										<!-- <button name="perform" string="Perform" type="object" attrs="{'invisible': [('state', '!=', 'new')]}" groups="base.group_no_one"/> -->
										<button name="perform" string="Perform" type="object" groups="base.group_no_one"/>
										<field name="display_name" />
										<field name="duration"/>
										<field name="date" />
										<field name="state" />
									</tree>
								</field>
							</page>
							<page name="actions" string="Actions">
								<group col='2'>
									<button name="reload" string="Reload" type="object"/>
									<div>
										Applies configuration files and prepares docker-compose file.
									</div>
									<button name="reload_and_restart" string="Restart" type="object" />
									<div>
										Stops and restarts all containers.
									</div>
									<button string="Make Cronjob" name="make_cron"  type="object" groups="base.group_no_one"/>
									<div>
										Recreates the missing cronjob to execute the tasks of the branch in the background.
									</div>
								</group>
								<group string="Debug">
									<button name="open_shell" string="Open Shell" type="object"/>
									<div>
										Opens a command line shell of this odoo instance.
									</div>
									<button name="debug_webcontainer" string="Debug" type="object"/>
									<div>
										Runs odoo webcontainer in debug mode.
									</div>
									<button name="start_webmailer" string="Show Webmailer" type="object"/>
									<div>
										Shows the web mailer.
									</div>
									<button name="start_logs" string="Show Active Logs" type="object"/>
									<div>
										Shows the logs outputs of the containers.
									</div>
								</group>
								<group string="Backup">
									<button name="dump" string="Dump" type="object"/>
									<div>
										Save database into a file.
									</div>
									<button name="restore_dump" string="Restore Dump" type="object" confirm="Current data is lost. Continue?"/>
									<div>
										Restores the selected dump.
									</div>
								</group>
								<group string="Docker">
									<button name="docker_start" string="Start/Restart Containers" type="object"/>
									<div>
										Executes docker-compose start.
									</div>
									<button name="docker_stop" string="Stop Containers" type="object"/>
									<div>
										Executes docker-compose stop.
									</div>
									<button name="docker_get_state" string="Update Docker State" type="object"/>
									<div>
										Retrieve State of docker
									</div>
									<button name="build" string="Build" type="object" />
									<div>
										Builds docker machines
									</div>
								</group>
								<group string="Source Code">
									<button name="update_git_commits" string="Update Git Commits" type="object"/>
									<div>
										Fetches new git commits and shows them here.
									</div>

								</group>
								<group string="Miscellaneous">
									<button string="Make Cronjob" name="make_cron"  type="object" groups="base.group_no_one"/>
									<div>
										Recreates the missing cronjob to execute the tasks of the branch in the background.
									</div>
								</group>

							</page>
							<page name="config_page" string="Configuration">
								<group>
									<field name="reload_config"/>
								</group>
								<div>
									Additional configuration like for example:<br/>
									<br/>
									RUN_ODOO_QUEUEJOBS=1<br/>
									RUN_ODOO_CRONJOBS=1<br/>

								</div>
							</page>
							<page string="Releases" name="releases">
								<field name="release_ids">
									<tree>
										<field name="planned_date"/>
										<field name="state"/>
										<field name="machine_ids"/>
									</tree>
								</field>
							</page>
							<page string="Commits" name="commits">
								<field name="commit_ids" nolabel="1" readonly="1">
									<tree>
										<field name="date" />
										<field name="author"/>
										<field name="text"/>
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
				</form>
			</field>
		</record>
	</data>
</odoo>
