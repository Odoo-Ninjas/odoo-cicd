<odoo>
	<data noupdate='0'>
<record model="ir.ui.view" id="view_cicd_git_branch_kanban">
	<field name="model">cicd.git.branch</field>
	<field name="name">Branches</field>
	<field name='type'>kanban</field>
	<field name="arch" type="xml">
		<kanban default_group_by="state">
			<field name="name"/>
			<field name="last_access"/>
			<templates>

				<t t-name="kanban-box">
					<div t-attf-class="oe_kanban_global_click" style="min-height: 250px;">
						<div>
							<i class="fa fa-window-maximize" role="img" aria-label="Enterprise" title="Enterprise"/>
							<strong><field name="name"/></strong>
						</div>
						<hr class="mt4 mb4"/>
						<div>
							<strong>State:</strong>
							<field name="state"/>
						</div>
						<div>
							<strong>Build State:</strong>
							<field name="build_state"/>
						</div>
						<div>
							<strong>Date Added:</strong>
							<field name="create_date"/>
						</div>
						<div>
							<strong>Repository:</strong>
							<field name="repo_short"/>
						</div>
						<div>
							<strong>Last Access:</strong>
							<field name="last_access"/>
						</div>
						<div t-if="current_task">
							<strong>Current Activity:</strong>
							<field name="current_task"/>
						</div>
						<div t-if="database_ids">
							<strong>Databases:</strong>
							<t t-foreach="database_ids" t-as="db">
								<t t-esc="db.name"></t> [<t t-esc="db.size_human"></t>]
							</t>
						</div>
					</div>
				</t>

			</templates>
		</kanban>

	</field>
</record>
	

	</data>
</odoo>
