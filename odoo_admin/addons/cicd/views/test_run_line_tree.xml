<odoo>
	<data noupdate='0'>
		<record id="view_cicd_test_run_line_tree" model="ir.ui.view">
			<field name="name">cicd.test.run.line tree</field>
			<field name="model">cicd.test.run.line</field>
			<field name="arch" type="xml">
				<tree decoration-danger="state == 'failed'" decoration-success="state == 'success'">
					<button name="open_window" string="" icon="fa-external-link" type="object" />
					<field name="ttype"/>
					<field name="name"/>
					<button name="robot_results" string="" icon="fa-search" type="object" attrs="{'invisible': [('robot_output', '=', False)]}"/>
					<field name="started"/>
					<field name="duration"/>
					<field name="state"/>
					<!-- <button string="Toggle" name="toggle_force_success" type="object"/> -->
					<field name="force_success" widget="boolean_toggle"/>
					<field name="try_count"/>
					<field name="robot_output" invisible='1'/>
				</tree>
			</field>
		</record>
	</data>
</odoo>