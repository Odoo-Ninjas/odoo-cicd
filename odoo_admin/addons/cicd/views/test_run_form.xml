<odoo>
	<data noupdate='0'>

	<record id="view_cicd_test_run_form" model="ir.ui.view">
		<field name="name">cicd.test.run form</field>
		<field name="model">cicd.test.run</field>
		<field name="arch" type="xml">
			<form string="">
				<header>
					<field name="state"/>
					<button name="rerun" string="Re-Run" type="object" />
				</header>
				<sheet>
					<group string="Details">
						<field name="line_ids" nolabel='1' context="{'form_view_ref': 'cicd.view_cicd_test_run_line_form'}">
						</field>
					</group>
				</sheet>
				<div class="oe_chatter">
					<field name="message_follower_ids" widget="mail_followers"/>
					<field name="message_ids" widget="mail_thread"/>
				</div>
			</form>
		</field>
	</record>

	</data>
</odoo>
