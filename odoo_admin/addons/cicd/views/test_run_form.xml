<odoo>
	<data noupdate='0'>

		<record id="view_cicd_test_run_form" model="ir.ui.view">
			<field name="name">cicd.test.run form</field>
			<field name="model">cicd.test.run</field>
			<field name="arch" type="xml">
				<form string="">
					<header>
						<field name="do_abort" invisible="1"/>
						<field name="state" widget="statusbar" attrs="{'readonly': True}" clickable='True'/>
						<button name="rerun" string="Re-Run" type="object" states='failed,success,omitted'/>
						<button name="abort" string="Abort" type="object" attrs="{'invisible': [('do_abort', '=', True)]}"/>
						<button name="execute_now" string="Execute Now" type="object" groups="base.group_no_one" />
					</header>
					<sheet>
						<div class="oe_title">
							<h1>
								<field name="name" colspan="4" class="oe_inline" readonly='1'/>
							</h1>
						</div>
						<group col='4'>
							<field name="create_date"/>
							<field name="date" />
							<field name="commit_id"/>
							<field name="repo_short"/>
							<field name="branch_id"/>
							<field name="branch_ids" widget="many2many_tags"/>
							<field name="duration"/>
							<field name="success_rate"/>
							<field name="queuejob_log" filename="queuejob_log_filename"/>
							<field name="queuejob_log_filename" invisible='1'/>
							<field name="no_reuse"/>
						</group>
						<notebook>
							<page name='unittests'>
								<field name="line_unittest_ids" nolabel='1' context="{'form_view_ref': 'cicd.view_cicd_test_run_line_form'}">
								</field>
							</page>
							<page name='robottests'>
								<field name="line_robottest_ids" nolabel='1' context="{'form_view_ref': 'cicd.view_cicd_test_run_line_form'}">
								</field>
							</page>
							<page name="details" string="Details">
								<field name="line_ids" nolabel='1' context="{'form_view_ref': 'cicd.view_cicd_test_run_line_form'}">
								</field>
							</page>
							<page string="Settings" name="settings" col="2">
								<group col='2'>
									<field name="run_unittests" widget="boolean_toggle"/>
									<field name="retry_unit_tests" />
									<field name="timeout_tests"/>
									<field name="timeout_migration"/>
									<field name="run_robottests" widget="boolean_toggle"/>
									<field name="simulate_install_id"/>
								</group>
							</page>
							<page string="Queuejobs">
								<button name="refresh_jobs" string="" type="object" icon="fa-refresh"/>
								<field name="queuejob_ids">
									<tree default_order='state'>
										<field name="state"/>
										<field name="identity_key"/>
										<field name="name"/>
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
				</form>
			</field>
		</record>

	</data>
</odoo>
