<odoo>
	<data noupdate='0'>

		<record id="view_cicd_make_dump_form" model="ir.ui.view">
			<field name="name">cicd.dump wizard</field>
			<field name="model">cicd.wiz.dump</field>
			<field name="arch" type="xml">
				<form string="">
					<header></header>
					<sheet>
						<group string="" col="2">
							<field name="ttype" />
							<field name="machine_id" />
							<field name="branch_id" />
							<field name="volume_id" />
							<field name="filename" attrs="{'invisible': [('ttype', '=', 'restore')]}"/>
							<field name="dump_id" attrs="{'invisible': [('ttype', '=', 'backup')]}"/>
						</group>
					</sheet>
					<footer>
						<button name="OK" string="ok" type="object" />
						<button special="cancel" string="Cancel" class="oe_link" />
					</footer>
				</form>
			</field>
		</record>

	</data>
</odoo>
